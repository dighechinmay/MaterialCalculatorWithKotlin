<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="10dp"
    android:weightSum="5">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/display_text"
            android:padding="2dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:text="numbers will be display"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:gravity="end"
            android:letterSpacing="0.3"
            android:visibility="visible"/>
    </FrameLayout>

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rowCount="6"
        app:columnCount="4"
        android:padding="5dp"
        android:layout_marginTop="100dp"
        android:layout_weight="4"
        >


        <Button
            android:width="90dp"
            android:height="90dp"
            android:id="@+id/all_clear_btn"
            android:text="AC"
            android:textSize="18sp"
            app:layout_row="0"
            app:layout_column="0"
            android:layout_margin="4dp"/>

        <Button
            android:width="90dp"
            android:height="90dp"
            android:id="@+id/sign_change_btn"
            android:text="±"
            android:textSize="18sp"
            app:layout_row="0"
            app:layout_column="1"
            android:layout_margin="4dp"/>

        <Button
            android:width="90dp"
            android:height="90dp"
            android:id="@+id/modulo_btn"
            android:text="%"
            android:textSize="18sp"
            app:layout_row="0"
            app:layout_column="2"
            android:layout_margin="4dp"/>

        <Button
            android:width="90dp"
            android:height="90dp"
            android:id="@+id/divide_btn"
            android:text="÷"
            android:textSize="18sp"
            app:layout_row="0"
            app:layout_column="3"
            android:layout_margin="4dp"/>

        <!--1st row-->

        <Button
            android:width="90dp"
            android:height="90dp"
            android:id="@+id/nine9_btn"
            android:text="9"
            android:textSize="18sp"
            app:layout_row="1"
            app:layout_column="0"
            />

        <Button
            android:width="90dp"
            android:height="90dp"
            android:id="@+id/eight8_btn"
            android:text="8"
            android:textSize="18sp"
            app:layout_row="1"
            app:layout_column="1"/>

        <Button
            android:width="90dp"
            android:height="90dp"
            android:id="@+id/seven7_btn"
            android:text="7"
            android:textSize="18sp"
            app:layout_row="1"
            app:layout_column="2"/>

        <Button
            android:width="90dp"
            android:height="90dp"
            android:id="@+id/multiply_btn"
            android:text="x"
            android:textSize="16sp"
            app:layout_row="1"
            app:layout_column="3"/>



        <!-- 2nd row-->

        <Button
            android:width="90dp"
            android:height="90dp"
            android:id="@+id/six6_btn"
            android:text="6"
            android:textSize="18sp"
            app:layout_row="2"
            app:layout_column="0" />

        <Button
            android:width="90dp"
            android:height="90dp"
            android:id="@+id/five5_btn"
            android:text="5"
            android:textSize="18sp"
            app:layout_row="2"
            app:layout_column="1"/>

        <Button
            android:width="90dp"
            android:height="90dp"
            android:id="@+id/four_btn"
            android:text="4"
            android:textSize="18sp"
            app:layout_row="2"
            app:layout_column="2"/>

        <Button
            android:width="90dp"
            android:height="90dp"
            android:id="@+id/subtract_btn"
            android:text="-"
            android:textSize="24sp"
            app:layout_row="2"
            app:layout_column="3"/>

        <!-- 3rd row-->

        <Button
            android:width="90dp"
            android:height="90dp"
            android:id="@+id/three3_btn"
            android:text="3"
            android:textSize="18sp"
            app:layout_row="3"
            app:layout_column="0" />

        <Button
            android:width="90dp"
            android:height="90dp"
            android:id="@+id/two2_btn"
            android:text="2"
            android:textSize="18sp"
            app:layout_row="3"
            app:layout_column="1"/>

        <Button
            android:width="90dp"
            android:height="90dp"
            android:id="@+id/one1_btn"
            android:text="1"
            android:textSize="18sp"
            app:layout_row="3"
            app:layout_column="2"/>

        <Button
            android:width="90dp"
            android:height="90dp"
            android:id="@+id/add_btn"
            android:text="+"
            android:textSize="24sp"
            app:layout_row="3"
            app:layout_column="3"/>

        <!--4th row -->

        <Button
            android:width="90dp"
            android:height="90dp"
            android:id="@+id/zero_btn"
            android:text="0"
            android:textSize="18sp"
            app:layout_row="4"
            app:layout_column="0" />

        <Button
            android:width="90dp"
            android:height="90dp"
            android:id="@+id/future_btn"
            android:text="$"
            android:textSize="18sp"
            app:layout_row="4"
            app:layout_column="1" />

        <Button
            android:width="90dp"
            android:height="90dp"
            android:id="@+id/dot_btn"
            android:text="."
            android:textSize="18sp"
            app:layout_row="4"
            app:layout_column="2"/>

        <Button
            android:width="90dp"
            android:height="90dp"
            android:id="@+id/equals_btn"
            android:text="="
            android:textSize="18sp"
            app:layout_row="4"
            app:layout_column="3"/>

        <!--5th row -->



    </androidx.gridlayout.widget.GridLayout>


</LinearLayout>
